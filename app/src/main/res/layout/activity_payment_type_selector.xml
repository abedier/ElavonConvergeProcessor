<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".PaymentTypeSelectorActivity">

    <LinearLayout
        android:id="@+id/paymentTypeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/creditBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credit Payment"
            android:visibility="visible" />
        <Button
            android:id="@+id/debitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Debit Payment"
            android:visibility="visible" />
        <Button
            android:id="@+id/voucherBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voucher Payment"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/chargeLayout"
        android:layout_below="@id/paymentTypeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/chargeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Charge $10.00"
            android:visibility="visible" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:visibility="gone" />
        <Button
            android:id="@+id/clearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear Log" />
    </LinearLayout>


    <View
        android:id="@+id/separator3"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/chargeLayout"
        android:background="#000000" />


    <ScrollView
        android:id="@+id/demoScroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator3"
        android:padding="5dp">

        <TextView
            android:id="@+id/consoleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:typeface="monospace" />
    </ScrollView>
</RelativeLayout>
